@model Auction.Models.Auth.LoginVM

@{
    ViewData["Title"] = "Авторизация";
    ViewBag.IsShowHeader = false;
}

<section class="container-fluid my-auto py-3">
    <div class="row justify-content-center align-items-center">
        <div class="col-xl-5" style="width:500px">
            <div class="card rounded-3 overflow-hidden">
                <div class="card-body p-md-4 mx-md-4">
                    <div class="text-center">
                        <img src="~/img/logo/logo-128.png" style="width: 128px;" alt="logo">
                        <h4 class="mt-1 mb-5 pb-1">Добро пожаловать на Auctogist</h4>
                    </div>
                    <form method="post">
                        <p>Пожалуйста войдите в свой аккаунт</p>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="form-floating mb-4">
                            <input asp-for="Username" class="form-control" placeholder="Username"/>
                            <label asp-for="Username" class="form-label"></label>
                            <span asp-validation-for="Username" class="invalid-feedback"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Password" class="form-control" placeholder="Password"/>
                            <label asp-for="Password" class="form-label"></label>
                            <span asp-validation-for="Password" class="invalid-feedback"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>

                        <div class="d-grid text-center pt-1 mb-5 pb-1">
                            <button type="submit" class="btn btn-primary mb-3">Войти</button>
                        </div>

                        <div class="d-flex align-items-center justify-content-center pb-4">
                            <p class="mb-0 me-2">Ещё нет учётной записи?</p>
                            <a asp-action="Register" class="btn btn-outline-primary">Зарегистрируйтесь</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}