@model Auction.Models.Auth.RegisterVM

@{
    ViewData["Title"] = "Регистрация";
    ViewBag.IsShowHeader = false;
}

<section class="container-fluid my-auto py-3">
    <div class="row justify-content-center align-items-center">
        <div class="w-sm-auto" style="max-width:1000px">
            <div class="card rounded-3 overflow-hidden">
                <div class="row g-0">
                    <div class="col-lg-6 flex-nowrap" style="max-width:500px">
                        <div class="card-body p-sm-4 mx-sm-4">
                            <div class="text-center">
                                <img src="~/img/logo/logo-128.png" style="width: 128px;" alt="logo">
                                <h4 class="mt-1 mb-5 pb-1">Добро пожаловать на Auctogist</h4>
                            </div>
                            <form method="post">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <div class="form-floating mb-4">
                                    <input asp-for="Username" class="form-control" placeholder="Username" />
                                    <label asp-for="Username" class="form-label"></label>
                                    <span asp-validation-for="Username" class="invalid-feedback"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <input asp-for="Password" class="form-control" placeholder="Password" />
                                    <label asp-for="Password" class="form-label"></label>
                                    <span asp-validation-for="Password" class="invalid-feedback"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <input asp-for="RepeatPassword" class="form-control" placeholder="Password" />
                                    <label asp-for="RepeatPassword" class="form-label"></label>
                                    <span asp-validation-for="RepeatPassword" class="invalid-feedback"></span>
                                </div>

                                <div class="d-grid text-center pt-1 mb-5 pb-1">
                                    <button type="submit" class="btn btn-primary mb-3">Зарегистрироваться</button>
                                </div>

                                <div class="d-flex align-items-center justify-content-center pb-4">
                                    <p class="mb-0 me-2">Уже зарегистрированы?</p>
                                    <a asp-action="Login" class="btn btn-outline-primary">Войдите</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 d-none d-lg-flex align-items-center bg-primary">
                        <div class="text-white px-3 py-4 p-5 mx-4">
                            <h4 class="mb-4">Мы больше, чем просто аукцион</h4>
                            <p class="small mb-0">
                                Независимо от вашего интереса – мода, техника, искусство или декор – Auctogist объединяет
                                различные категории товаров в одном месте. Вы можете находить уникальные предметы, которые
                                выделят вас из толпы. Станьте частью сообщества тех, кто ценит индивидуальность!
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}