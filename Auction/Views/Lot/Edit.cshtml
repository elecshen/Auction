@model Auction.Models.Lots.EditLotVM
@{
    ViewData["Title"] = "Изменение лота";
}

<section class="container-fluid mb-3">
    <div class="container m-auto">
        @if (ViewBag.IsCanEdit == true)
        {
            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Pid" />
                        <div class="form-group">
                            <label asp-for="CategoryId" class="control-label"></label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId" disabled ></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" readonly  />
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            @if (ViewBag.IsActive)
                            {
                                <textarea asp-for="Description" class="form-control" readonly ></textarea>
                            }
                            else
                            {
                                <textarea asp-for="Description" class="form-control"></textarea>
                            }
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StartDate" class="control-label"></label>
                            @if (ViewBag.IsActive)
                            {
                                <input asp-for="StartDate" class="form-control" readonly  />
                            }
                            else
                            {
                                <input asp-for="StartDate" class="form-control" />
                            }
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ExpiresOn" class="control-label"></label>
                            <input asp-for="ExpiresOn" class="form-control" />
                            <span asp-validation-for="ExpiresOn" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BlitzPrice" class="control-label"></label>
                            <input asp-for="BlitzPrice" class="form-control" />
                            <span asp-validation-for="BlitzPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StartPrice" class="control-label"></label>
                            @if (ViewBag.IsActive)
                            {
                                <input asp-for="StartPrice" class="form-control" readonly  />
                            }
                            else
                            {
                                <input asp-for="StartPrice" class="form-control" />
                            }
                            <span asp-validation-for="StartPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PriceStep" class="control-label"></label>
                            @if (ViewBag.IsActive)
                            {
                                <input asp-for="PriceStep" class="form-control" readonly  />
                            }
                            else
                            {
                                <input asp-for="PriceStep" class="form-control" />
                            }
                            <span asp-validation-for="PriceStep" class="text-danger"></span>
                        </div>
                        <div class="form-group my-1">
                            <input type="submit" value="Изменить" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            @section Scripts {
            @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
            }
        }
        else
        {
            <div class="mx-auto my-5 py-5 d-flex flex-column align-items-center">
                <h3>Редактирование лота невозможно</h3>
                <h5>Данный лот уже завершён и не может быть изменён</h5>
            </div>
        }
    </div>
</section>